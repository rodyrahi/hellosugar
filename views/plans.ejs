<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <% if(!isAuthenticated) { %>
                                
        <a class="btn btn-primary " aria-current="page" href="#pricing">Sign up</a>
    <%} else {%>
        <div class="container  ">
            
            <div class="  justify-content-center">
                
            
            <form class="bg-white p-4 rounded mt-3 shadow " style="width: inherit;" method="POST" action="/basic">
                
                <h2 class="  " style="color: black;" ><%= plan %></h2>
                <hr>
                <div class="form-group mb-2 d-flex ">
                   
                  <input type="text" class="form-control me-2"  id="name" name="name" placeholder="Full Name">
                  <input type="tel" class="form-control"  id="number" name="number" placeholder="Number">
                </div>
              
                <div class="form-group mb-3">
                  
                    
                  </div>
                  <div class="form-group mb-3">
                  
                    <input type="email" class="form-control" id="mail" name="mail" placeholder="Business@gamil.com">
                  </div>
                  <div class="form-group mb-3">
                  
                    <input type="tel" class="form-control" id="city" name="city" placeholder="City">
                  </div>
                  <div class="form-group mb-3">
                  
                    <input type="tel" class="form-control"  id="business" name="business" placeholder="Business">
                  </div>
                <button type="submit" class="btn btn-primary m-0 ">Submit</button>
              </form>
            </div>

        </div>       
            
    
    
     <%}%>


